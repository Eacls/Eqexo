      a.footer-banner-link |
      a.footer-banner-link(href="/about/" title="") 隐私
      a.footer-banner-link |
      a.footer-banner-link(href="/about/" title="about") 关于
      a.footer-banner-link |
      a.footer-banner-link.cc(href="/cc/" title="cc协议")
